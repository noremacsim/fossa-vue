{
  "manifest_version": 2,
  "name": "fossa",
  "description": "fossa apps",
  "version": "0.0.1",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_popup": "index.html"
  },

  "content_scripts": [{
    "matches": [ "*://*.fossa-app.site/*"  ],
    "js": [ "/index.js" ],
    "all_frames": true
  }]
}
